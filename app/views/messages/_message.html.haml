.main-chat__contents-body
  .main-chat__contents-body-title
    .main-chat__contents-body-title-name
      = message.user.name
    .main-chat__contents-body-title-time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__contents-body-message
    - if message.messages.present?
      %p.main-chat__contents-body-message--content
        = message.messages
    = image_tag message.image.url, class: 'main-chat__contents-body-message--image' if message.image.present?